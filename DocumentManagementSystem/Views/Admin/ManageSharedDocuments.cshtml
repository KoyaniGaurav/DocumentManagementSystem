@model IEnumerable<DocumentManagementSystem.Models.AdminDocumentViewModel>

@{
    ViewData["Title"] = "Manage Shared Documents";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Manage Shared Documents</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Documents I've Shared</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>File Name</th>
                                        <th>Type</th>
                                        <th>Shared with</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doc in Model)
                                    {
                                        <tr>
                                            <td>@doc.Title</td>
                                            <td>@doc.Description</td>
                                            <td>@doc.FileName</td>
                                            <td>@doc.FileType</td>
                                            <td>
                                                @if (doc.SharedWithUsers != null && doc.SharedWithUsers.Any())
                                                {
                                                    <ul class="list-unstyled mb-0">
                                                        @foreach (var user in doc.SharedWithUsers)
                                                        {
                                                            <li class="d-flex justify-content-between align-items-center mb-1">
                                                                <span><i class="fas fa-user text-primary"></i> @user.FullName</span>
                                                                <a asp-action="RemoveShare" 
                                                                   asp-route-documentId="@doc.Id" 
                                                                   asp-route-shareWithUserId="@user.Id"
                                                                   class="btn btn-sm btn-outline-danger"
                                                                   onclick="return confirm('Are you sure you want to remove this share?')"
                                                                   title="Remove Share">
                                                                    <i class="fas fa-times"></i>
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not shared</span>
                                                }
                                            </td>

                                            <td>@doc.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id"
                                                   class="btn btn-sm btn-info" title="View">
                                                    <i class="fas fa-eye"></i> View
                                                </a>

                                                <a asp-action="EditDocument" asp-route-id="@doc.Id"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>

                                                <a asp-action="RemoveAllShares" asp-route-documentId="@doc.Id"
                                                   class="btn btn-sm btn-danger" title="Remove All Shares"
                                                   onclick="return confirm('Are you sure you want to remove all shares for this document?')">
                                                    <i class="fas fa-trash"></i> Remove All
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-share-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No shared documents found</h5>
                            <p class="text-muted">You haven't shared any documents yet.</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-arrow-left"></i> Go to Dashboard
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
