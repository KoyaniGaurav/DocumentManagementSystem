@model IEnumerable<DocumentManagementSystem.Models.AdminIndexViewmodel>

@{
    ViewData["Title"] = "Admin Dashboard";
    var sharedDocuments = ViewBag.SharedDocuments as IEnumerable<DocumentManagementSystem.Models.SharedDocumentViewModel>;
}

<div class="header">
    <h3>Welcome, @ViewBag.Name!</h3>
    <div>
        <a  asp-controller="User" asp-action="UpdateProfile" class="btn btn-info">Update Profile</a>
    </div>
</div>
<hr />

<div class="actions">
    <a asp-controller="Document" asp-action="Create" class="btn btn-primary">Add New Document</a>
    <a asp-action="ManageSharedDocuments" class="btn btn-info">Manage Shared Documents</a>
</div>

<!-- Search Form -->
<div class="search-box">
    <form method="get" asp-action="Index">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search documents by title..." />
        <button type="submit" class="btn btn-primary">Search</button>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        }
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="success-message">
        @TempData["SuccessMessage"]
    </div>
}

<h3>My Documents</h3>

@if (Model != null && Model.Any())
{
    <table class="simple-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>File Name</th>
                <th>Type</th>
                <th>Category</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Title</td>
                    <td>@doc.Description</td>
                    <td>@doc.FileName</td>
                    <td>@doc.FileType</td>
                    <td>@doc.CategoryName</td>
                    <td>@doc.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-controller="Document" asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="ShareDocument" asp-route-id="@doc.Id" class="btn btn-sm btn-success">Share</a>
                        <a asp-controller="Document" asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-data">
        <p>No documents found. Start by creating your first document.</p>
        <a asp-action="CreateDocument" class="btn btn-primary">Create Document</a>
    </div>
}

<h3>Shared with Me</h3>
<!-- Shared Documents Section -->
@if (sharedDocuments != null && sharedDocuments.Any())
{
    <h3>Shared with Me</h3>
    <table class="simple-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>File Name</th>
                <th>Type</th>
                <th>Owner</th>
                <th>Shared At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in sharedDocuments)
            {
                <tr>
                    <td>@doc.Title</td>
                    <td>@doc.Description</td>
                    <td>@doc.FileName</td>
                    <td>@doc.FileType</td>
                    <td>@doc.OwnerName</td>
                    <td>@doc.SharedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Document" asp-action="ViewShared" asp-route-id="@doc.Id" class="btn-small">View</a>
                        <a asp-controller="Document" asp-action="DownloadShared" asp-route-id="@doc.Id" class="btn-small">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-data">
        <h4>No documents shared yet to you.</h4>
    </div>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        color: #333;
    }

    h2, h3 {
        margin-bottom: 10px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .actions {
        margin-bottom: 15px;
    }

    .search-box {
        margin-bottom: 20px;
    }

        .search-box input {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 250px;
        }

    .btn {
        display: inline-block;
        padding: 6px 12px;
        background-color: #4285f4;
        color: white;
        text-decoration: none;
        border-radius: 3px;
        font-size: 14px;
        margin-right: 5px;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn-warning {
        background-color: #f0ad4e;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-sm {
        font-size: 13px;
        padding: 4px 8px;
    }

    .btn-small {
        font-size: 12px;
        padding: 3px 7px;
    }

    .success-message {
        color: green;
        margin-bottom: 10px;
    }

    .simple-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .simple-table th, .simple-table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .simple-table th {
            background-color: #f0f0f0;
        }

        .simple-table tr:nth-child(even) {
            background-color: #fafafa;
        }

    .no-data {
        margin-top: 20px;
        text-align: center;
    }
</style>
