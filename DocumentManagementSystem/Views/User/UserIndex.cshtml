@model IEnumerable<DocumentManagementSystem.Models.Document>

@{
    ViewData["Title"] = "User Dashboard";
}

<h3>Welcome, @ViewBag.Name!</h3>
<hr />
<p>You can manage your documents here.</p>

<div class="mb-3">
    <a asp-controller="Document" asp-action="Create" class="btn btn-primary">
        + Add New Document
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>File Name</th>
            <th>Type</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Title</td>
                    <td>@doc.Description</td>
                    <td>@doc.FileName</td>
                    <td>@doc.FileType</td>
                    <td>@doc.Category?.Name</td>
                    <td>@doc.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-controller="Document" asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Document" asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this document?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No documents found.</td>
            </tr>
        }
    </tbody>
</table>
